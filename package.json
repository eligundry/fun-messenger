{
    "name": "fun-messenger",
    "version": "0.0.0",
    "description": "My attempt at making an app with the Parcel Bundler, React, and Typescript",
    "main": "src/index.html",
    "dependencies": {
        "@material-ui/core": "^1.0.0",
        "@material-ui/icons": "^1.0.0",
        "history": "^4.7.2",
        "jwt-decode": "^2.2.0",
        "node-fetch": "^2.1.2",
        "normalize-scss": "^7.0.1",
        "openpgp": "^3.0.10",
        "parcel": "^1.8.1",
        "react": "^16.3.2",
        "react-dom": "^16.3.2",
        "react-redux": "^5.0.7",
        "react-router": "^4.2.0",
        "react-router-redux": "^4.0.8",
        "redux": "^3.7.2",
        "redux-thunk": "^2.2.0",
        "socket.io-client": "^2.1.1"
    },
    "devDependencies": {
        "@types/history": "^4.6.2",
        "@types/jest": "^22.2.3",
        "@types/jwt-decode": "^2.2.1",
        "@types/node-fetch": "^1.6.9",
        "@types/react": "^16.3.14",
        "@types/react-dom": "^16.0.5",
        "@types/react-redux": "^6.0.0",
        "@types/react-router": "^4.0.25",
        "@types/react-router-redux": "^5.0.14",
        "@types/redux-thunk": "^2.1.32",
        "babel-core": "^6.26.3",
        "babel-jest": "^22.4.3",
        "babel-preset-react": "^6.24.1",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "eslint-plugin-react": "^7.8.2",
        "faker": "^4.1.0",
        "fetch-mock": "^6.4.2",
        "jest": "^22.4.3",
        "node-sass": "^4.9.0",
        "npm": "^6.0.1",
        "parcel-bundler": "^1.8.1",
        "parcel-plugin-typescript": "^0.7.1",
        "redux-mock-store": "^1.5.1",
        "regenerator-runtime": "^0.11.1",
        "ts-jest": "^22.4.6",
        "tslint": "^5.10.0",
        "tslint-config-airbnb": "^5.8.0",
        "tslint-react": "^3.6.0",
        "typescript": "^2.8.3"
    },
    "scripts": {
        "serve": "parcel src/index.html -t browser -d dist/ -o dist/index.html --out-file index.html",
        "build": "parcel build src/index.html -t browser -d dist/ --out-file dist/index.html",
        "docker-build": "parcel build src/index.html -d /usr/share/nginx/html -t browser --out-file index.html",
        "test": "jest --no-cache",
        "test:watch": "npm test -- --watch",
        "lint": "tslint -c tslint.json 'src/**/*.ts*'"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleDirectories": [
            "<rootDir>/node_modules"
        ],
        "transform": {
            "^.+\\.(ts|tsx)?$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
            "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest"
        },
        "testMatch": [
            "**/__tests__/*.+(ts|tsx|js)"
        ],
        "globals": {
            "ts-jest": {
                "useBabelrc": true
            }
        }
    },
    "author": "Eli Gundry",
    "license": "ISC"
}
